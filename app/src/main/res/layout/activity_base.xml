<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:background="@drawable/bg"
        android:orientation="vertical"
        app:flow_horizontalAlign="center"
        tools:context=".Base">




        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            >

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#52F8FAF8"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/lacarte"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openMap"
                app:srcCompat="@drawable/ic_baseline_map_24" />

            <ImageView
                android:id="@+id/reservation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openreservation"
                app:srcCompat="@drawable/ic_baseline_restaurant_24" />

            <ImageView
                android:id="@+id/meudujour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openMenuDuJour"
                app:srcCompat="@drawable/ic_baseline_today_24" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openMenu"
                app:srcCompat="@drawable/ic_baseline_menu_book_24" />

            <ImageView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openContact"
                app:srcCompat="@drawable/ic_baseline_phone_24" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

